# Database Backup Configuration
# This file contains settings for automated database backups

# Backup Directory
# Location where backups will be stored
BACKUP_DIR=K:\Scoutung platform\backups\database

# Backup Retention Policy
# Number of days to keep backups before automatic deletion
RETENTION_DAYS=30

# Backup Schedule
# Recommended: Daily at 2:00 AM (configure in Windows Task Scheduler)
BACKUP_SCHEDULE=Daily at 2:00 AM

# Compression Settings
# Backups are automatically compressed to save disk space
# Compression method: 7-Zip (gzip) or Windows built-in (zip)
COMPRESSION_ENABLED=true

# Safety Backup Before Restore
# Create a safety backup before any restore operation
SAFETY_BACKUP_ENABLED=true
SAFETY_BACKUP_DIR=K:\Scoutung platform\backups\safety

# Notification Settings (Future Enhancement)
# Email notifications for backup success/failure
EMAIL_NOTIFICATIONS_ENABLED=false
NOTIFICATION_EMAIL=admin@scoutingplatform.com

# Storage Quotas (Monitoring Only)
# Monitor disk space usage for backup directory
# Alert if backup directory exceeds this size (in GB)
MAX_BACKUP_SIZE_GB=50

# Backup Verification
# Automatically verify backup integrity after creation
VERIFY_AFTER_BACKUP=true

# Remote Backup (Future Enhancement)
# Copy backups to remote storage for disaster recovery
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_PATH=\\remote-server\backups\scouting-platform
